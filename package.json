{
  "name": "arcana",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "turbo dev --parallel",
    "native": "turbo run dev --filter expo-app",
    "web": "turbo run dev --filter next-app",
    "api": "cross-env NO_D1_WARNING=true turbo run dev --filter @arcana/api",
    "build": "turbo run build --filter @arcana/ui",
    "generate": "pnpm --filter=@arcana/api generate",
    "migrate:local": "pnpm --filter=@arcana/api migrate:local",
    "upgrade:tamagui": "pnpm up '*tamagui*'@latest '@tamagui/*'@latest react-native-web-lite@latest",
    "check-deps": "check-dependency-version-consistency .",
    "check-types": "tsc --noEmit",
    "fix": "manypkg fix",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm run build",
    "ui:build": "pnpm --filter ui tamagui-build",
    "ui:watch": "pnpm --filter ui tamagui-build -- --watch",
    "dist:clean": "git clean -xdf dist",
    "pnpm:clean": "find apps packages -depth -type d -name \"node_modules\" -exec git clean -xdf '{}' \\;",
    "pnpm:nuke": "pnpm pnpm:clean; rm -rf pnpm-lock.yaml;",
    "clean:workspaces": "turbo clean",
    "clean": "pnpm dist:clean; pnpm pnpm:clean",
    "nuke": "pnpm dist:clean; pnpm pnpm:nuke"
  },
  "dependencies": {
    "@babel/runtime": "^7.22.10",
    "@manypkg/cli": "^0.21.0",
    "@nderscore/tamagui-typescript-plugin": "^0.5.4",
    "@supabase/supabase-js": "^2.32.0",
    "check-dependency-version-consistency": "^4.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.47.0",
    "miniflare": "3.20230904.0",
    "node-gyp": "^9.4.0",
    "prettier": "^3.0.2",
    "react-native-url-polyfill": "^2.0.0",
    "turbo": "^1.10.13",
    "typescript": "^5.2.2",
    "workerd": "1.20230807.0"
  },
  "engines": {
    "node": ">=18.17",
    "pnpm": ">=8.7"
  },
  "packageManager": "pnpm@8.7.4"
}
